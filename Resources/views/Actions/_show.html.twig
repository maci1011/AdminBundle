
<div class="container-fluid">
<div class="details-list">

	{% if item.webPreview is defined %}
	<div class="row">
		<img class="item-preview img-fluid" src="{{ asset(item.webPreview | imagine_filter('maci_admin_list_preview')) }}" alt="preview" />
	</div>
	{% endif %}

	{% for field, val in data %}

	<div class="row details-item {% if loop.index is even %}even{% else %}odd{% endif %}">

		<div class="col-xs-4">

			<span class="item-label">{{ field|capitalize }}</span>

		</div>

		<div class="col-xs-8">

			{% include "MaciAdminBundle:Actions:_item_field.html.twig" %}

		</div>

	</div>

	{% endfor %}

</div>
</div>
